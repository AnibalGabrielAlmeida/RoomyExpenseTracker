---
import BaseLayout from "../layouts/BaseLayout.astro";
import ExpenseCard from "../components/ExpenseCard.astro";

const expenses = [
  { id: 1, title: "Pizza", amount: 250, date: "2025-06-03", emoji: "🍕" },
  { id: 2, title: "Supermercado", amount: 350, date: "2025-06-01", emoji: "🛒" },
];
---

<BaseLayout title="Roomy Tracker">
  <a href="/nuevo" class="block text-center bg-green-600 text-white py-2 rounded-xl shadow-md mb-4">
    + Nuevo gasto
  </a>

  {expenses.map((exp) => (
    <ExpenseCard {...exp} />
  ))}
</BaseLayout>
