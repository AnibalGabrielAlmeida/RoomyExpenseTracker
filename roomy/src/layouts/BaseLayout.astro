---
import "../styles/global.css";
const { title = "Roomy Tracker" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-gray-100 min-h-screen font-sans">
    <header class="bg-gray-900 text-white text-center p-4 text-xl font-bold shadow">
      {title}
    </header>

    <main class="p-4">
      <slot />
    </main>
  </body>
</html>
