<form id="expense-form" class="space-y-4">
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
    <input type="text" name="name" required
      class="w-full rounded-md border-gray-300 p-2 shadow-sm focus:ring focus:ring-green-500" />
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Monto</label>
    <input type="number" name="amount" min="0" step="0.01" required
      class="w-full rounded-md border-gray-300 p-2 shadow-sm focus:ring focus:ring-green-500" />
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Fecha</label>
    <input type="date" name="date" required
      class="w-full rounded-md border-gray-300 p-2 shadow-sm focus:ring focus:ring-green-500" />
  </div>

  <button type="submit"
    class="w-full bg-primary text-text py-2 rounded-md font-semibold shadow-md hover:bg-hover transition">
    Guardar gasto
  </button>

  <p id="error-message" class="text-red-600 mt-2 hidden"></p>
</form>
